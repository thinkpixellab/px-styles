////
/// @group controls.tooltip
////

@use '../utils' as *;

@mixin tooltip($overrides: ()) {
    // locals
    $css: (
        position: absolute,
        transform: translate(0%, calc(-100% - 4px))
    );

    // config
    $css: flat-merge($css, get('controls:tooltip'));

    // overrides
    $css: flat-merge($css, $overrides);

    @include css-map($css);
}
